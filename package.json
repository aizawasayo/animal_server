{
  "name": "animal_server",
  "version": "1.0.0",
  "description": "",
  "main": "app.js",
  "scripts": {
    "register": "nodemon src",
    "clean": "rm -rf dist",
    "server": "nodemon --exec babel-node src",
    "server:prod": "nodemon --exec node dist",
    "server:pm2": "pm2 start pm2.config.json",
    "build": "npx babel src -d dist",
    "dev": "cross-env NODE_ENV=development npm-run-all server",
    "prod": "cross-env NODE_ENV=production npm-run-all clean build server:prod",
    "prod:pm2": "cross-env NODE_ENV=production npm-run-all clean build server:pm2",
    "test": "npm run build && mocha --require @babel/register"
  },
  "dependencies": {
    "@koa/router": "^10.1.1",
    "bcrypt": "^5.0.1",
    "config": "^3.3.6",
    "core-js": "^3.18.2",
    "joi": "^17.4.2",
    "koa": "^2.13.3",
    "koa-body": "^4.2.0",
    "koa-logger": "^3.2.1",
    "koa-onerror": "^4.1.0",
    "koa-session": "^6.2.0",
    "koa-session-mongoose": "^3.0.1",
    "koa-static": "^5.0.0",
    "module-alias": "^2.2.2",
    "mongoose": "^6.0.10",
    "npm-run-all": "^4.1.5",
    "require-directory": "^2.1.1"
  },
  "devDependencies": {
    "@babel/cli": "^7.15.7",
    "@babel/core": "^7.15.8",
    "@babel/node": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
